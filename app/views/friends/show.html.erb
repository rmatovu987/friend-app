
<div id="<%= dom_id @friend %>">
  <div class="h-100 p-5 bg-light border rounded-3">
    <h2><%= @friend.first_name %> <%= @friend.last_name %></h2>
    <p>
      <%= @friend.email %>  |  <%= @friend.phone %>   |  <%= @friend.twitter %>
    </p>
    <br/>
    <hr>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>

    <%= button_to "Destroy this friend", @friend, :class=>"btn btn-danger mt-3", method: :delete %>
  </div>

</div>

